@inherits Flashcardgenerator.Layouts.FullWidthLayoutComponent

@using Radzen
@using Radzen.Blazor
@using Flashcardgenerator.Models.Localhost
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenHeader style="height: 65px">
  <ChildContent>
    <div class="row justify-content-start align-items-center" style="height: 63px; width: 1177px">
      <div class="col-md-6 d-flex align-items-center" style="padding-left: 30px">
        <RadzenHeading Size="H4" style="margin-bottom: 0; width: 100%" Text="Flashcard Generator">
        </RadzenHeading>
        <RadzenMenu style=@($"display: inline-flex; height: 50px; width: 361.40625px;flex: auto")>
          <ChildContent>
            <RadzenMenuItem Text="Home" Path="home">
            </RadzenMenuItem>
          </ChildContent>
        </RadzenMenu>
      </div>
      <div class="col-md-1">
        <RadzenLabel style="margin-left: 10px; text-align: right; width: 75.6875px" Text="View All:">
        </RadzenLabel>
      </div>
      <div class="col-2 col-md-4">
        <RadzenMenu>
          <ChildContent>
            <RadzenMenuItem Path="clients" Text="Clients">
            </RadzenMenuItem>
            <RadzenMenuItem Path="briefs" Text="Briefs">
            </RadzenMenuItem>
            <RadzenMenuItem Path="cards" Text="Cards">
            </RadzenMenuItem>
            <RadzenMenuItem Path="categories" Text="Categories">
            </RadzenMenuItem>
          </ChildContent>
        </RadzenMenu>
      </div>
    </div>
  </ChildContent>
</RadzenHeader>
<RadzenBody @ref="body0" style="margin-left: 0px; margin-top: 58px">
  <ChildContent>
    <RadzenContentContainer Name="main">
    @Body
    </RadzenContentContainer>
  </ChildContent>
</RadzenBody>
<RadzenFooter>
  <ChildContent>
    <RadzenLabel Text="Copyright Ⓒ 2021">
    </RadzenLabel>
  </ChildContent>
</RadzenFooter>
